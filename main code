<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Math Quiz Game</title>
  <style>
    body {
      font-family: 'Comic Sans MS', cursive;
      margin: 0;
      padding: 0;
      background: url('https://i.postimg.cc/26Td6pSs/cartton.jpg') no-repeat center center fixed;
      background-size: cover;
      color: #fff;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.5);
      min-height: 100vh;
      padding: 20px;
      text-align: center;
    }

    h1 {
      color: #ffeb3b;
      font-size: 36px;
      animation: bounce 1s infinite alternate;
    }

    .option {
      display: block;
      background: #ff9800;
      color: white;
      border: none;
      padding: 12px;
      margin: 10px auto;
      width: 220px;
      font-size: 20px;
      cursor: pointer;
      border-radius: 12px;
      transition: transform 0.3s, background 0.3s;
    }

    .option:hover {
      background: #f57c00;
      transform: scale(1.05);
    }

    #feedback {
      font-size: 22px;
      margin-top: 15px;
      min-height: 30px;
    }

    #score, #timer {
      font-size: 18px;
      margin-top: 10px;
      color: #c8e6c9;
    }

    select {
      font-size: 16px;
      padding: 5px;
      margin: 10px;
    }

    #start-screen, #quiz-screen, #end-screen {
      display: none;
    }

    @keyframes bounce {
      from { transform: translateY(0); }
      to { transform: translateY(-10px); }
    }
  </style>
</head>
<body>
  <div class="overlay">
    <h1>🧮 Math Quiz Game</h1>

    <!-- Start Screen -->
    <div id="start-screen">
      <label for="difficulty">Choose Difficulty:</label>
      <select id="difficulty">
        <option value="easy">Easy</option>
        <option value="medium">Medium</option>
        <option value="hard">Hard</option>
      </select>
      <label for="timeLimit">Choose Time Limit:</label>
      <select id="timeLimit">
        <option value="30">30 seconds</option>
        <option value="60">60 seconds</option>
        <option value="90">90 seconds</option>
      </select>
      <br>
      <button class="option" onclick="startQuiz()">Start Quiz</button>
    </div>

    <!-- Quiz Screen -->
    <div id="quiz-screen">
      <div id="question">Loading question...</div>
      <button class="option" onclick="checkAnswer(this)"></button>
      <button class="option" onclick="checkAnswer(this)"></button>
      <button class="option" onclick="checkAnswer(this)"></button>
      <button class="option" onclick="checkAnswer(this)"></button>
      <div id="feedback"></div>
      <div id="score">Score: 0</div>
      <div id="timer">Time left: 30s</div>
    </div>

    <!-- End Screen -->
    <div id="end-screen">
      <h2>🎉 Time's Up!</h2>
      <p id="final-score">Your Score: 0</p>
      <button class="option" onclick="restartQuiz()">Play Again</button>
    </div>
  </div>

  <!-- Sound Effects -->
  <audio id="correctSound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_7f5b6c6f3b.mp3?filename=correct-2-46134.mp3"></audio>
  <audio id="wrongSound" src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_4f0b6e6c3b.mp3?filename=wrong-2-46133.mp3"></audio>

  <script>
    let correctAnswer = 0;
    let score = 0;
    let timeLeft = 30;
    let timerInterval;

    const correctSound = document.getElementById('correctSound');
    const wrongSound = document.getElementById('wrongSound');

    document.getElementById('start-screen').style.display = 'block';

    function startQuiz() {
      score = 0;
      timeLeft = parseInt(document.getElementById('timeLimit').value);
      document.getElementById('score').textContent = `Score: ${score}`;
      document.getElementById('timer').textContent = `Time left: ${timeLeft}s`;

      document.getElementById('start-screen').style.display = 'none';
      document.getElementById('quiz-screen').style.display = 'block';
      document.getElementById('end-screen').style.display = 'none';

      generateQuestion();
      startTimer();
    }

    function restartQuiz() {
      document.getElementById('end-screen').style.display = 'none';
      document.getElementById('start-screen').style.display = 'block';
    }

    function generateQuestion() {
      const difficulty = document.getElementById('difficulty').value;
      let num1, num2;

      switch (difficulty) {
        case 'easy':
          num1 = Math.floor(Math.random() * 10) + 1;
          num2 = Math.floor(Math.random() * 10) + 1;
          break;
        case 'medium':
          num1 = Math.floor(Math.random() * 50) + 10;
          num2 = Math.floor(Math.random() * 50) + 10;
          break;
        case 'hard':
          num1 = Math.floor(Math.random() * 100) + 50;
          num2 = Math.floor(Math.random() * 100) + 50;
          break;
      }

      const operations = ['+', '-', '×'];
      const op = operations[Math.floor(Math.random() * operations.length)];
      let questionText = `${num1} ${op} ${num2}`;

      switch (op) {
        case '+': correctAnswer = num1 + num2; break;
        case '-': correctAnswer = num1 - num2; break;
        case '×': correctAnswer = num1 * num2; break;
      }

      document.getElementById('question').textContent = `What is ${questionText}?`;

      let answers = [correctAnswer];
      while (answers.length < 4) {
        let wrong = correctAnswer + Math.floor(Math.random() * 20) - 10;
        if (!answers.includes(wrong)) answers.push(wrong);
      }

      answers = answers.sort(() => Math.random() - 0.5);
      const buttons = document.querySelectorAll('#quiz-screen .option');
      buttons.forEach((btn, i) => {
        btn.textContent = answers[i];
      });

      document.getElementById('feedback').textContent = '';
    }

    function startTimer() {
      clearInterval(timerInterval);
      timerInterval = setInterval(() => {
        timeLeft--;
        document.getElementById('timer').textContent = `Time left: ${timeLeft}s`;
        if (timeLeft <= 0) {
          clearInterval(timerInterval);
          endQuiz();
        }
      }, 1000);
    }

    function checkAnswer(button) {
      const answer = parseInt(button.textContent);
      if (answer === correctAnswer) {
        document.getElementById('feedback').textContent = '✅ Correct!';
        score++;
        correctSound.play();
      } else {
        document.getElementById('feedback').textContent = `❌ Wrong! The correct answer was ${correctAnswer}`;
        wrongSound.play();
      }
      document.getElementById('score').textContent = `Score: ${score}`;
      setTimeout(generateQuestion, 1000);
    }

    function endQuiz() {
      document.getElementById('quiz-screen').style.display = 'none';
      document.getElementById('end-screen').style.display = 'block';
      document.getElementById('final-score').textContent = `Your Score: ${score}`;
    }
  </script>
</body>
</html>
